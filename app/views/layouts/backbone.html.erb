<!DOCTYPE html>
<html>  
  <head>
    <meta charset="utf-8" />
    <%= auto_discovery_link_tag(:atom, {:controller => "articles", :action => "feed"}) %>
    <%= auto_discovery_link_tag(:rss, {:controller => "articles", :action => "feed"}) %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <title>Traces</title>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-498639-4']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </head>
  <body>
    <div id="loader"><div class="loading">Loading...</div></div>
    <header>
    </header>
    <section id="contents">
      <%= yield %>
    </section>
    <div id="more">
      <button>More Articles ... </button>
    </div>
    <footer>
    </footer>
  </body>
  <script type="text/javascript"> 
    $(function() {
      $('article h1 a').click(function(e) {
        if (e.which === 2 || e.metaKey || e.ctrlKey) {
          return true;
        }
        e.preventDefault();
        return window.location.hash = $(e.target).attr('href');
      });
      $('#nav_home').click(function(e) {
        if (e.which === 2 || e.metaKey || e.ctrlKey) {
          return true;
        }
        e.preventDefault();
        return window.location.hash = $(e.target).attr('href');
      });
      App.initialize();
    });
  </script>
</html>