<article>
  <section id="post_meta">
    <p>
    Created @
    <time datetime="<%= diary.created_at.to_date.to_s %>">
      <%= Time.zone.at(diary.created_at.to_time).to_datetime.to_formatted_s(:long) %>
    </time>
    </p>
  </section>
  <section id="post_content">
    <h1><%= link_to diary.title, diary_path(diary) %></h1>
    <%=raw Kramdown::Document.new(extract_content(diary)).to_html%>
    <p>

    </p>
    <% if user_signed_in? %>
      <%= link_to "edit", edit_diary_path(diary.slug) %>
    <% end %>
  </section>
</article>