<h3>Leave Your Comment</h3>
<%= form_for [post, Comment.new] do |f| %>

<p>
  <%= f.text_field :name %>
  <%= label_tag(:comment_name, "Name")%>
</p>
<p>
  <%= f.text_field :mail %>
  <%= label_tag(:comment_mail, "Mail")%>
</p>
<p>
  <%= f.text_field :website %>
  <%= label_tag(:comment_website, "Website")%>
</p>
<p>
  <%= f.text_area :content, :size => "60x12" %>
</p>
<p>
  <%= submit_tag "Comment" %>
</p>
<% end %>